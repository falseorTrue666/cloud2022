<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aiteguigu.springcloud.dao.PaymentDao">
    <resultMap id="BaseResultMap" type="com.aiteguigu.springcloud.entities.Payment">
        <id column="id" jdbcType="BIGINT" javaType="Long" property="id" />
        <result column="serial" jdbcType="VARCHAR" javaType="STRING" property="serial" />
    </resultMap>
    <sql id="Base_Column_List">
        id,
        serial
    </sql>

    <select id="getPaymentList" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from payment
        where id = #{id}
    </select>
    <insert id="save" keyColumn="id" keyProperty="id"
    parameterType="com.aiteguigu.springcloud.entities.Payment" useGeneratedKeys="true">
        insert into payment (serial)
        values (#{serial,jdbcType=VARCHAR})
    </insert>
</mapper>